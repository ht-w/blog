@import "variables"

@font-face
  font-family 'icomoon'
  src url(icomoon-font-path + '/icomoon.eot?5k7d83')
  src url(icomoon-font-path + '/icomoon.eot?5k7d83#iefix') format('embedded-opentype'), url(icomoon-font-path + '/icomoon.ttf?5k7d83') format('truetype'), url(icomoon-font-path + '/icomoon.woff?5k7d83') format('woff'), url(icomoon-font-path + '/icomoon.svg?5k7d83#icomoon') format('svg')
  font-weight normal
  font-style normal
  font-display block

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon' !important
  speak never
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-yeah
  &:before
    content icon-yeah
.icon-middlefinger
  &:before
    content icon-middlefinger

